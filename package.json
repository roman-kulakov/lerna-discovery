{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "scripts": {
    "build": "yarn build:packages",
    "start": "yarn storybook",
    "lint": "eslint --no-error-on-unmatched-pattern ./",
    "lint:fix": "eslint --fix --quiet --no-error-on-unmatched-pattern ./",
    "lint-staged": "lint-staged",
    "test": "jest --passWithNoTests",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --ci --runInBand --passWithNoTests --coverage --reporters=default && codecov",
    "build:ci": "yarn clean:packages && for dir in packages/*; do package=${dir#'packages/'}; rollup -c --ci --scope @spotim/$package || exit 1; done",
    "build:packages": "yarn clean:packages && lerna changed | while read package; do rollup -c --scope $package || exit 1; done",
    "build:allpackages": "yarn clean:packages && for dir in packages/*; do package=${dir#'packages/'}; rollup -c --scope @spotim/$package || exit 1; done",
    "release": "yarn build:packages && lerna publish",
    "clean:packages": "rm -rf ./packages/*/dist",
    "reset": "yarn clean:packages && rm -rf ./**/.cache && rm -rf ./**/node_modules && rm -rf ./yarn.lock && yarn install",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@atomico/rollup-plugin-sizes": "^1.1.4",
    "@babel/core": "^7.17.2",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.16.7",
    "@babel/plugin-proposal-optional-chaining": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@fontsource/open-sans": "^4.5.4",
    "@lerna/batch-packages": "^3.16.0",
    "@lerna/filter-packages": "^4.0.0",
    "@lerna/project": "^4.0.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@spotim/eslint-config": "^1.0.0",
    "@spotim/postcss-increase-specificity": "^3.0.1",
    "@spotim/ui-components": "^11.1.15",
    "@spotim/webpack_package": "^1.17.3",
    "@storybook/addon-essentials": "^6.4.18",
    "@storybook/builder-webpack5": "^6.4.18",
    "@storybook/manager-webpack5": "^6.4.18",
    "@storybook/react": "^6.4.18",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.39",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "babel-loader": "^8.2.3",
    "classnames": "^2.3.1",
    "codecov": "^3.8.3",
    "css-loader": "^6.6.0",
    "eslint": "^8.8.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "install-peers": "^1.0.3",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.3",
    "minimist": "^1.2.5",
    "postcss": "^8.4.6",
    "postcss-custom-properties": "^12.1.4",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.67.2",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.31.2",
    "sass": "^1.49.7",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "typescript": "^4.5.5",
    "webpack": "^5.68.0"
  },
  "dependencies": {},
  "resolutions": {
    "node-sass": "file:dependency-stub"
  }
}
